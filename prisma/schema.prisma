generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id        Int      @id @default(autoincrement())
  shortCode String?  @unique
  longUrl   String
  userId    String?
  createdAt DateTime @default(now())
  usedCount Int      @default(0)

  @@index([shortCode])
}
